<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"      
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/piano_type_Layout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        >

    <ImageView
        android:id="@+id/is_new_img"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerVertical="true" 
        android:layout_alignParentLeft="true"
        android:background="@drawable/vs_yellow_new"
        android:visibility="gone"
       />

    <TextView 
        android:id="@+id/piano_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"     
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/is_new_img"  
        android:layout_centerVertical="true" 
        android:textSize="20sp"
        android:textColor="@color/TextBlack"
        />
    <Button 
        android:id="@+id/is_piano_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_centerVertical="true" 
        android:layout_alignParentRight="true"
        android:background="@drawable/sel_yes_img"   
        />  
	</RelativeLayout>
	
	<View
        android:layout_width="fill_parent"
        android:layout_height="0.67dp"
        android:background="@color/vs_line_color" />

 </LinearLayout>
