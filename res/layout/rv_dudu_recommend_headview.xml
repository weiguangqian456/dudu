<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_headview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_welfare_check_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_40_dip"
        android:background="@drawable/more_seckill_bg">

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="查看更多新会员专区商品"
            android:textColor="#fe667a"
            android:textSize="@dimen/w_14_dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/w_10_dip"
            android:layout_toRightOf="@+id/more"
            android:src="@drawable/more_seckill" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_105_dip"
        android:background="@color/vs_bg_color">

        <ImageView
            android:id="@+id/iv_festival"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_100_dip"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/w_5_dip"
            android:layout_marginTop="@dimen/w_5_dip"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_39_dip"
        android:background="@color/vs_white">

        <View
            android:id="@+id/view_gray"
            android:layout_width="@dimen/w_3_dip"
            android:layout_height="@dimen/w_10_dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_14_dip"
            android:background="#565f64" />

        <ImageView
            android:layout_width="@dimen/w_69_dip"
            android:layout_height="@dimen/w_14_dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_4_dip"
            android:layout_toRightOf="@+id/view_gray"
            android:src="@drawable/mall_recommend" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/color_bg" />
</LinearLayout>