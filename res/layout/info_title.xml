<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/w_200_dip"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rider_info_background">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rider_back"
        android:padding="@dimen/w_10_dip"
        android:layout_marginTop="@dimen/w_21_dip"
        android:layout_marginLeft="@dimen/w_4_dip"/>

    <com.weiwei.base.util.CircleImageView
        android:id="@+id/myself_head"
        android:layout_width="@dimen/w_60_dip"
        android:layout_height="@dimen/w_60_dip"
        android:src="@drawable/mall_user_image_defult"
        android:layout_marginLeft="@dimen/w_16_dip"
        android:layout_marginTop="@dimen/w_85_dip"
        app:border_color="@color/transparent"
        app:border_width="0dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未设置"
        android:textSize="@dimen/w_14_dip"
        android:textColor="@color/White"
        android:layout_marginTop="@dimen/w_91_dip"
        android:layout_toRightOf="@+id/myself_head"
        android:layout_marginLeft="@dimen/w_10_dip"/>

    <RelativeLayout
        android:id="@+id/rl_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rider_info_button"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginTop="@dimen/w_91_dip"
        android:layout_marginLeft="@dimen/w_13_dip"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_lave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上班"
            android:textSize="@dimen/w_10_dip"
            android:textColor="@color/White"
            android:drawableRight="@drawable/arrow_drown"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/w_2_dip"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="138*****234"
        android:textSize="@dimen/w_15_dip"
        android:textColor="@color/White"
        android:layout_toRightOf="@+id/myself_head"
        android:layout_marginLeft="@dimen/w_10_dip"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/w_6_dip"/>

    <RelativeLayout
        android:id="@+id/rl_withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/myself_head"
        android:layout_marginTop="@dimen/w_91_dip"
        android:layout_marginLeft="@dimen/w_175_dip">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总资产(元)"
            android:textSize="@dimen/w_14_dip"
            android:textColor="@color/White"
            />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total"
            android:textSize="@dimen/w_20_dip"
            android:text="1234.65"
            android:textColor="@color/White" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rider_withdraw"
            android:layout_below="@+id/tv_total"
            android:layout_marginTop="@dimen/w_5_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现"
                android:textSize="@dimen/w_10_dip"
                android:textColor="@color/White"
                android:drawableRight="@drawable/arrow_right"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/w_2_dip"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>