<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiwei.salemall.activity.AdActivity">

    <ImageView
        android:id="@+id/iv_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/countdownLl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/w_28_dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/w_22_dip"
        android:layout_marginTop="@dimen/w_31_dip"
        android:alpha="0.4"
        android:background="@drawable/bg_skip"
        android:gravity="center"
        android:paddingLeft="@dimen/w_6_dip"
        android:paddingRight="@dimen/w_6_dip"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FEFEFE"
            android:textSize="@dimen/w_13_dip" />
    </LinearLayout>
</RelativeLayout>
