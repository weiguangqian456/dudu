<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w_15_dip"
        android:layout_marginRight="@dimen/w_15_dip"
        android:layout_marginTop="@dimen/w_15_dip"
        android:gravity="center"
        android:textColor="@color/public_color_666666"
        android:textSize="@dimen/w_15_dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_15_dip"
            android:layout_marginRight="@dimen/w_15_dip"
            android:layout_marginTop="@dimen/w_15_dip"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/w_16_dip" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/w_14_dip"
            android:text="@string/freeze_account"
            android:textColor="@color/public_color_999999"
            android:visibility="gone"
            android:lineSpacingExtra="@dimen/w_5_dip"
            android:layout_marginLeft="@dimen/w_16_dip"
            android:layout_marginRight="@dimen/w_16_dip"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/w_15_dip"
        android:background="@color/public_color_E4E4E4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_neg"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/w_52_dip"
                android:layout_weight="1"
                android:background="@drawable/alert_dialog_left_selector"
                android:gravity="center"
                android:textColor="@color/public_color_999999"
                android:textSize="@dimen/w_16_dip" />

            <ImageView
                android:id="@+id/img_line"
                android:layout_width="1dp"
                android:layout_height="@dimen/w_52_dip"
                android:background="@color/public_color_E4E4E4" />

            <Button
                android:id="@+id/btn_pos"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/w_52_dip"
                android:layout_weight="1"
                android:background="@drawable/alert_dialog_right_selector"
                android:gravity="center"
                android:textColor="@color/public_color_EC6941"
                android:textSize="@dimen/w_16_dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_52_dip"
            android:textColor="@color/public_color_EC6941"
            android:textSize="@dimen/w_16_dip"
            android:text="知道了"
            android:gravity="center"
            android:visibility="gone"/>
    </RelativeLayout>


</LinearLayout>