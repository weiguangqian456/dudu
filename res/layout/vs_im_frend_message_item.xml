<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/vs_white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_enter"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center" >

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18.5dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/message_head_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/icon" >
            </ImageView>

            <LinearLayout
                android:id="@+id/message_dont_read_count_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top" >

                <FrameLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp" >

                    <ImageView
                        android:id="@+id/message_dont_read_count_img1"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="right|bottom"
                        android:background="@drawable/st_btn_numb_bg" >
                    </ImageView>

                    <TextView
                        android:id="@+id/message_donw_read_count_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="99"
                        android:textColor="@color/White"
                        android:textSize="12dp" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
        
            android:layout_marginRight="5dp"
            android:layout_weight="1.0"
             android:layout_marginLeft="18.5dp"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/message_name_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="#0F0F0F"
                    android:textSize="18dip" />

                <TextView
                    android:id="@+id/message_time_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#AEAEAE" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/body_content"
                android:layout_width="fill_parent"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/fail"
                    android:gravity="left|center_vertical"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/message_body_text"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="35dp"
                    android:singleLine="true"
                    android:textColor="#AEAEAE" />

                <LinearLayout
                    android:id="@+id/message_dont_read_count_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                       android:paddingRight="10dp"
                    android:layout_gravity="right|top" >

                    <FrameLayout
                        android:layout_width="24dp"
                     
                        android:layout_height="24dp" >

                        <ImageView
                            android:id="@+id/message_dont_read_count_img"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="right|bottom"
                            android:background="@drawable/st_btn_numb_bg" >
                        </ImageView>

                        <TextView
                            android:id="@+id/message_donw_read_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="99"
                            android:textColor="@color/White"
                            android:textSize="11sp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>