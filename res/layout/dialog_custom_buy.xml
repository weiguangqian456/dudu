<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_white_dialog"
        android:padding="14dp">
        <!--商品信息-->
        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--商品展示图-->
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/w_101_dip"
                android:layout_height="@dimen/w_101_dip"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/mall_foryou_default"/>
            <!--商品信息-->
            <LinearLayout
                android:layout_toRightOf="@id/iv_image"
                android:id="@+id/ll_shop_info"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/w_101_dip"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:gravity="bottom">
                <!--价格-->
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="￥998"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#F0222F"/>
                <!--原价-->
                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    tools:text="价格：￥998"
                    />
                <!--已选规格-->
                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="已选："
                    />
                <!--库存-->
                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="库存："
                    />
            </LinearLayout>
            <!--取消-->
            <FrameLayout
                android:id="@+id/fl_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="end"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_close_hint" />
            </FrameLayout>
        </RelativeLayout>
        <!--规格选择-->
        <android.support.v7.widget.RecyclerView
            android:paddingTop="12dp"
            android:id="@+id/rv_select"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
        <View style="@style/LineH"/>
        <!--现在购买-->
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/buy_now"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_btn_default"
            />
    </LinearLayout>
</LinearLayout>