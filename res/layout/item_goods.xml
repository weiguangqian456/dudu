<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="1px"
    android:paddingLeft="1px"
    android:paddingTop="1px"
    android:background="@color/bg_color"
    >
    <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/cv_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardElevation="2dp"-->
        <!--android:layout_margin="2dp"-->
        <!--app:cardBackgroundColor="@color/color_white">-->
        <!-- 用于布局隐藏时更新高度 -->
        <View
            android:id="@+id/view_new_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_bg"/>
        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/bg_click_feedback">
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/mall_foryou_default"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="苏泊尔"
                android:textSize="@dimen/w_14_dip"
                android:textColor="#666666"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_exchange"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exchange"
                    android:textColor="@color/color_integral_red"
                    android:textSize="@dimen/w_12_dip"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp" />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:textColor="@color/color_integral_red"
                    android:textSize="@dimen/w_12_dip"
                    tools:text="3999" />
                <TextView
                    android:id="@+id/tv_originally_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="￥49999"
                    android:textColor="#999999"
                    android:textSize="@dimen/w_12_dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_spare"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="立省400元"
                    android:textColor="@color/color_integral_red"
                    android:textSize="@dimen/w_12_dip"
                    android:background="@drawable/bg_goods_line_red"/>
                <TextView
                    android:id="@+id/tv_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/w_12_dip"
                    android:text="@string/now_buy"
                    android:textColor="@color/color_white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_goods_red"/>
            </RelativeLayout>
        </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->
</FrameLayout>