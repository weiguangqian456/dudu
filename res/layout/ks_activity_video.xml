<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black">
  <com.ij.f.d.ad.widget.SafeTextureView
    android:id="@+id/ksad_video_textureview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />
    <ImageView
      android:id="@+id/ksad_video_soundswitch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left|top"
      android:layout_margin="12dp"
      android:src="@drawable/ks_sound_selector"
      />

  <ImageView
    android:id="@+id/ksad_video_imgThumb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:visibility="gone"
    />

  <FrameLayout
    android:id="@+id/ksad_close_container"
    android:layout_width="wrap_content"
    android:layout_height="34dp"
    android:layout_gravity="top|right"
    android:layout_marginRight="12dp"
    android:layout_marginTop="16dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/ks_bg_timecount"
    >
    <TextView
      android:id="@+id/ksad_video_timecount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textColor="#ffffff"
      android:singleLine="true"
      android:ellipsize="none"
      android:layout_marginLeft="7dp"
      android:layout_marginRight="7dp"
      android:textSize="15dp"/>

    <ImageView
      android:id="@+id/ksad_video_close"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:layout_gravity="center"
      android:scaleType="centerInside"
      android:src="@drawable/ks_video_close"
      android:visibility="gone"/>

  </FrameLayout>

  <LinearLayout
      android:id="@+id/ksad_playendbar"
      android:layout_width="match_parent"
      android:layout_height="68dp"
      android:paddingLeft="12dp"
      android:paddingRight="12dp"
      android:background="@drawable/ks_bg_downloadbar"
      android:gravity="center_vertical"
      android:visibility="gone"
      android:layout_gravity="bottom"
      android:orientation="horizontal">
    <com.ij.f.d.ad.NiceImageView
        android:id="@+id/ksad_endbar_appicon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:gravity="top"
        android:layout_weight="1">
      <TextView
          android:id="@+id/ksad_endbar_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="16dp"
          android:textColor="#ffffff"
          android:maxLines="1"
          android:ellipsize="end"
          />
      <TextView
          android:id="@+id/ksad_endbar_desc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14dp"
          android:textColor="#ffffff"
          android:maxLines="1"
          android:ellipsize="end"
          android:layout_marginTop="4dp"
          />
    </LinearLayout>

    <com.ij.f.d.ad.PressedCoverViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical">
      <com.ij.f.d.ad.TextProgressBar
          android:id="@+id/ksad_endbar_downloadBtn"
          android:layout_width="120dp"
          android:layout_height="44dp"
          android:indeterminateOnly="false"
          />
    </com.ij.f.d.ad.PressedCoverViewGroup>>

  </LinearLayout>
  <LinearLayout
      android:id="@+id/ksad_playendbar_h5"
      android:layout_width="match_parent"
      android:layout_height="68dp"
      android:background="@drawable/ks_bg_downloadbar"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:visibility="gone"
      android:layout_gravity="bottom"
      android:padding="12dp">

    <TextView
        android:id="@+id/ksad_h5playbar_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:lineSpacingExtra="5dp"
        android:textColor="#ffffff"
        android:textSize="14dp"
        />

    <com.ij.f.d.ad.PressedCoverViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">
      <TextView
          android:id="@+id/ksad_h5playbar_btn"
          android:layout_width="120dp"
          android:layout_height="44dp"
          android:layout_gravity="center_vertical"
          android:textSize="16dp"
          android:textColor="#FF9882FF"
          android:text="查看详情"
          android:gravity="center"
          android:background="@drawable/ks_bg_round_white"
          />
    </com.ij.f.d.ad.PressedCoverViewGroup>
  </LinearLayout>
  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:indeterminateDrawable="@drawable/ks_progress_loading"
      android:visibility="gone"/>
</FrameLayout>