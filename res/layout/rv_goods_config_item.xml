<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/w_16_dip"
    android:layout_marginTop="@dimen/w_10_dip"
    android:background="@color/vs_white">

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/w_35_dip"
        android:text="产品名称"
        android:textColor="#636870"
        android:textSize="@dimen/w_15_dip" />


    <TextView
        android:id="@+id/shop_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/w_208_dip"
        android:text="产品名称"
        android:textColor="#333333"
        android:textSize="@dimen/w_15_dip" />
</RelativeLayout>