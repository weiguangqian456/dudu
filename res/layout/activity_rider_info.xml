<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White">

   <include
       layout="@layout/info_title"/>

    <RelativeLayout
        android:id="@+id/rl_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_50_dip"
        android:paddingLeft="@dimen/w_15_dip"
        android:paddingRight="@dimen/w_15_dip"
        android:layout_marginTop="@dimen/w_50_dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要抢单"
            android:textSize="@dimen/w_15_dip"
            android:textColor="@color/public_color_333333"
            android:drawableLeft="@drawable/qiangdan"
            android:drawablePadding="@dimen/w_5_dip"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="@dimen/w_20_dip"
            android:layout_height="@dimen/w_20_dip"
            android:text="1"
            android:textColor="@color/White"
            android:textSize="@dimen/w_10_dip"
            android:background="@drawable/red_circle"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_25_dip"/>

        <ImageView
            android:layout_width="@dimen/w_16_dip"
            android:layout_height="@dimen/w_16_dip"
            android:src="@drawable/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_1_dip"
        android:background="#E4E4E4"
        android:layout_marginLeft="@dimen/w_41_dip"
        android:layout_marginRight="@dimen/w_15_dip"/>

    <RelativeLayout
        android:id="@+id/rl_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_50_dip"
        android:paddingLeft="@dimen/w_15_dip"
        android:paddingRight="@dimen/w_15_dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的定位"
            android:textSize="@dimen/w_15_dip"
            android:textColor="@color/public_color_333333"
            android:drawableLeft="@drawable/dingwei"
            android:drawablePadding="@dimen/w_5_dip"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超过五分钟未定位"
            android:textColor="#EC6941"
            android:textSize="@dimen/w_12_dip"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_25_dip"/>

        <ImageView
            android:layout_width="@dimen/w_16_dip"
            android:layout_height="@dimen/w_16_dip"
            android:src="@drawable/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_1_dip"
        android:background="#E4E4E4"
        android:layout_marginLeft="@dimen/w_41_dip"
        android:layout_marginRight="@dimen/w_15_dip"/>

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_50_dip"
        android:paddingLeft="@dimen/w_15_dip"
        android:paddingRight="@dimen/w_15_dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="@dimen/w_15_dip"
            android:textColor="@color/public_color_333333"
            android:drawableLeft="@drawable/shezhi"
            android:drawablePadding="@dimen/w_5_dip"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/w_16_dip"
            android:layout_height="@dimen/w_16_dip"
            android:src="@drawable/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_1_dip"
        android:background="#E4E4E4"
        android:layout_marginLeft="@dimen/w_41_dip"
        android:layout_marginRight="@dimen/w_15_dip"/>

</LinearLayout>