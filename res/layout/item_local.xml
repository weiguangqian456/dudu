<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLlInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/mLlInfo2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingRight="14dp">
        <ImageView
            android:id="@+id/mIvImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/color_bg"/>

        <LinearLayout
            android:layout_marginLeft="9dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/w_14_dip"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="木纳动卡空间"/>
            <TextView
                android:id="@+id/mTvText"
                android:maxLines="1"
                android:textColor="#989898"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="亚茶色波特葡萄酒..."/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/mTvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF8200"
                        android:textSize="@dimen/w_13_dip"
                        tools:text="￥30.4" />
                    <TextView
                        android:id="@+id/mTvOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#C1C0C0"
                        android:textSize="@dimen/w_12_dip"
                        tools:text="￥30.4"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mLlAdd"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/mIvSubtract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jian"/>

                    <TextView
                        android:id="@+id/mTvCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#666666"
                        android:textSize="@dimen/w_14_dip"
                        android:minWidth="24dp"
                        tools:text="1"/>

                    <ImageView
                        android:id="@+id/mIvAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jia"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/mIvShopping"
                    android:visibility="visible"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gowucy"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="109dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E6E6E6"/>
</LinearLayout>