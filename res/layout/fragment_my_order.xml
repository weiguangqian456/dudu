<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3FA">

    <LinearLayout
        android:id="@+id/ll_no_order_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_no_order"
            android:layout_width="@dimen/w_128_dip"
            android:layout_height="@dimen/w_128_dip"
            android:layout_gravity="center"
            android:src="@drawable/mall_myorder_nodata" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/w_22_dip"
            android:gravity="center"
            android:text="没有相关订单~"
            android:textColor="#333333"
            android:textSize="@dimen/w_16_dip" />

        <Button
            android:id="@+id/btn_sallmall"
            android:layout_width="@dimen/w_110_dip"
            android:layout_height="@dimen/vs_about_logo_margintop"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/w_54_dip"
            android:background="@drawable/btn_shape_no_solid"
            android:gravity="center"
            android:text="返回商城"
            android:textColor="#1086FF"
            android:textSize="@dimen/w_14_dip" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>
