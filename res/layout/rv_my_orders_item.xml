<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/w_4_dip"
    android:background="@color/whites"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/w_9_dip"
        android:layout_marginLeft="@dimen/w_15_dip">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/w_15_dip"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/w_12_dip"
            android:layout_below="@+id/tv_name"/>

        <TextView
            android:id="@+id/shop_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_10_dip"
            android:text=""
            android:textColor="#F67A00"
            android:textSize="@dimen/w_13_dip" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_103_dip"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/w_85_dip"
                android:layout_height="@dimen/w_85_dip"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/w_15_dip">

                <ImageView
                    android:id="@+id/iv_shop_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mall_foryou_default" />

                <ImageView
                    android:id="@+id/iv_number_flag"
                    android:layout_width="@dimen/w_28_dip"
                    android:layout_height="@dimen/w_26_dip"
                    android:src="@drawable/subscript_seckill"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_goods_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/w_5_dip"
                        android:layout_weight="3"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="#1D1D1D"
                        android:textSize="@dimen/w_14_dip" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/nodeColor"
                            android:textSize="@dimen/w_11_dip" />

                        <TextView
                            android:id="@+id/tv_goods_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/w_5_dip"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/nodeColor"
                            android:textSize="@dimen/w_11_dip" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/w_5_dip"
                    android:layout_marginTop="@dimen/w_5_dip"
                    android:layout_marginBottom="@dimen/w_5_dip"
                    android:text=""
                    android:textColor="@color/nodeColor"
                    android:textSize="@dimen/w_12_dip" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/indicator_right_padding">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true">

                        <TextView
                            android:id="@+id/tv_mall_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#F0222F"
                            android:textSize="@dimen/w_15_dip"
                            android:textStyle="bold"
                            tools:text="3333" />

                        <TextView
                            android:id="@+id/tv_jd_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/nodeColor"
                            android:textSize="@dimen/w_12_dip"
                            tools:text="222222222" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/vs_blue"
                            android:textSize="@dimen/w_15_dip"
                            android:visibility="gone"
                            tools:text="aaaaaa" />

                        <TextView
                            android:id="@+id/tv_save_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/w_5_dip"
                            android:layout_marginRight="@dimen/w_10_dip"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/public_color_999999"
                            android:textSize="@dimen/w_15_dip"
                            tools:text="aaaaaa" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_35_dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/totalNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/public_color_333333"
                android:textSize="@dimen/w_14_dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/w_13_dip"
                android:text="商品金额："
                android:textColor="@color/public_color_333333"
                android:textSize="@dimen/w_14_dip" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/public_color_333333"
                android:textSize="@dimen/w_14_dip"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/w_13_dip"
                android:text="运费："
                android:textColor="@color/public_color_333333"
                android:textSize="@dimen/w_14_dip" />

            <TextView
                android:id="@+id/tv_mail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/w_5_dip"
                android:layout_marginRight="@dimen/w_15_dip"
                android:text=""
                android:textColor="@color/public_color_333333"
                android:textSize="@dimen/w_14_dip"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_35_dip">

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_14_dip"
            android:text=""
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/w_14_dip"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/w_5_dip"
        android:layout_marginBottom="@dimen/w_5_dip">

        <Button
            android:id="@+id/btn_cancle_order"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/w_30_dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_15_dip"
            android:layout_toLeftOf="@+id/btn_ensure_receive"
            android:background="@drawable/btn_shape_no_solid_999999"
            android:text="取消订单"
            android:textColor="@color/public_color_999999"
            android:textSize="@dimen/w_13_dip"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_ensure_receive"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/w_30_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_15_dip"
            android:background="@drawable/btn_shape_no_solid_orange"
            android:text=""
            android:textColor="@color/public_color_EC6941"
            android:textSize="@dimen/w_13_dip" />
        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_location"
            android:layout_width="@dimen/w_80_dip"
            android:layout_height="@dimen/w_30_dip"
            app:rv_cornerRadius="@dimen/w_3_dip"
            app:rv_strokeWidth="@dimen/w_1_dip"
            app:rv_strokeColor="#0AA834"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_15_dip"
            android:text="查看轨迹"
            android:textColor="#0AA834"
            android:textSize="@dimen/w_13_dip"
            android:visibility="visible"/>
    </RelativeLayout>
</LinearLayout>