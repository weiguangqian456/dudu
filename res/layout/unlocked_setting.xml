<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vs_bg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vs_gray_simaple" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical" >

        <include layout="@layout/systitle" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/BgColor"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
      
        <!-- 线 -->

       <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
        	android:layout_below="@id/title"
            android:background="@color/vs_line_color"
            android:contentDescription="@string/app_name" />

        
        <RelativeLayout
       android:id="@+id/unlocked_id"
        android:layout_width="fill_parent"
        android:layout_height="55.5dp"
        android:background="@color/vs_white" >

        <TextView
            android:id="@+id/iv_right_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="设置手势密码"
            android:textColor="@color/vs_black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/set_unlocked_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/app_name"
            android:cursorVisible="true"
            android:padding="10dp"
            android:src="@drawable/vs_switch_close" />
    </RelativeLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.67dp"
            android:background="@color/vs_line_color"
            android:contentDescription="@string/app_name" />
        <RelativeLayout
       android:id="@+id/re_unlocked_id"
        android:layout_width="fill_parent"
        android:layout_height="55.5dp"
        android:background="@drawable/vs_personal_bg_color" >

        <TextView
            android:id="@+id/iv_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="重置手势密码"
            android:textColor="@color/vs_black"
            android:textSize="18sp" />
		<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                   android:background="@drawable/vs_right_icon"
                    android:contentDescription="@string/app_name" />
        <ImageView
                    android:layout_width="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="0.67dp"
                    android:background="@color/vs_line_color"
                    android:contentDescription="@string/app_name" />
    </RelativeLayout>
        
          
           

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.67dp"
            android:background="@color/vs_line_color"
            android:contentDescription="@string/app_name" />

     </LinearLayout>   
 
</RelativeLayout>