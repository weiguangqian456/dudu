<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/w_15_dip"
    android:background="@color/White"
    android:layout_marginTop="@dimen/w_1_dip">

    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号："
        android:textSize="@dimen/w_14_dip"
        android:textColor="@color/public_color_333333"/>
    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:textSize="@dimen/w_12_dip"
        android:textColor="@color/public_color_333333"
        android:layout_below="@+id/order" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-06-12 12:00:00"
        android:textSize="@dimen/w_12_dip"
        android:textColor="@color/public_color_999999"
        android:layout_below="@+id/tv_order"
        android:layout_marginTop="@dimen/w_2_dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配送完成"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_money"
        android:textSize="@dimen/w_12_dip"
        android:textColor="@color/public_color_333333"
        android:layout_marginRight="@dimen/w_50_dip"/>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="￥50"
        android:textColor="@color/public_color_333333"
        android:textSize="@dimen/w_16_dip" />

</RelativeLayout>