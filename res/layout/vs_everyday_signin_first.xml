<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/vs_gray_simaple"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- 顶部标题 -->

        <include layout="@layout/systitle_orange" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="0.67dp"
        android:background="@color/vs_line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title"
        android:background="@drawable/vs_personal_bg_color"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="215dip"
            android:layout_height="243dip"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/vs_invite_money_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dip" >

            <TextView
                android:id="@+id/SigninNoticeViewFirst"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/White"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TotalGive_First"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.1"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <Button
            android:id="@+id/SignInButton_now_first"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/vs_green_btn_selecter"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/everyday_signin_button_nowsign"
            android:textColor="@color/White"
            android:textSize="17sp" >
        </Button>

        <TextView
            android:id="@+id/Titletost_First"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/warm_point"
            android:textColor="@color/bakcontact_lasttime"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/SignContentView_First"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/bakcontact_lasttime"
            android:textSize="13sp"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>