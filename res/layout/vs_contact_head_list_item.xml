<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/contact_titleview"
        android:layout_width="fill_parent"
        android:layout_height="23dp"
        android:background="#f7f7f7"
        android:gravity="center_vertical"
        android:paddingLeft="18.5dp"
        android:singleLine="true"
        android:textColor="@color/Black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:orientation="vertical"
            tools:ignore="ContentDescription" >

            <View
                android:id="@+id/contact_list_item_head_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd" />

            <ImageView
                android:id="@+id/contact_list_item_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:src="@drawable/icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="InefficientWeight" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd" />

            <TextView
                android:id="@+id/contact_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="Name"
                android:textColor="@color/Black"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/contact_list_item_number"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="top"
                android:singleLine="true"
                android:text="186 6842 1927"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="65dp"
            android:orientation="vertical"
            tools:ignore="InefficientWeight" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd" />

            <ImageView
                android:id="@+id/contact_list_item_checkbox"
                android:layout_width="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="45dp"
                android:layout_marginRight="23dp"
                android:padding="12dp"
                android:src="@drawable/vs_small_chioce_false"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>