<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_ad"
        android:layout_width="@dimen/w_325_dip"
        android:layout_height="@dimen/w_330_dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/w_70_dip"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/w_31_dip"
        android:layout_height="@dimen/w_31_dip"
        android:layout_below="@+id/iv_ad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/w_45_dip"
        android:src="@drawable/icon_close"/>
</RelativeLayout>