<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="1px"
    android:layout_marginTop="1px"
    android:layout_marginLeft="1px"
    android:paddingBottom="10dp"
    android:background="@color/vs_white">
    <FrameLayout
        android:id="@+id/fl_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_168_dip">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/mall_foryou_default"
            android:contentDescription="@null"  />

        <ImageView
            android:id="@+id/iv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sec_one_discount"
            android:visibility="gone"
            android:contentDescription="@null" />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginLeft="@dimen/w_8_dip"
        android:layout_marginRight="@dimen/w_8_dip"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/w_7_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/w_14_dip"
        tools:text="康宁"/>
    <TextView
        android:id="@+id/tv_price_order"
        android:layout_marginLeft="@dimen/w_10_dip"
        android:layout_marginRight="@dimen/w_8_dip"
        android:layout_marginTop="@dimen/w_7_dip"
        android:textColor="#636870"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/w_11_dip"
        tools:text="￥998"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/w_8_dip"
        android:layout_marginRight="@dimen/w_8_dip"
        android:layout_marginTop="@dimen/w_7_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_price"
            android:textColor="#ff4e52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="￥399"
            android:textSize="@dimen/w_17_dip"
            />
        <TextView
            android:id="@+id/tv_economy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="立省599"
            android:textColor="@color/orange"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_economical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/w_11_dip"  />
    </RelativeLayout>
</LinearLayout>